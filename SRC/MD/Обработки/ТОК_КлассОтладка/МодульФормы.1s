Процедура Соо(Текст, ЭтоОткрытиеЗакрытие = 0) Экспорт
	
	ТекстСообщения = ПолучитьТекстСообщения(Текст);
	
	Если 1=0 Тогда
		_КлассФабрикаСобытий_Текущий = _КлассФабрикаСобытий_Текущий;
	КонецЕсли;
	//Если ЕстьГлобальнаяПеременная("_КлассФабрикаСобытий_Текущий") = 1 Тогда
	//	Сообщить("_КлассФабрикаСобытий_Текущий :: "+_КлассФабрикаСобытий_Текущий);
	//КонецЕсли;
	
	
	Если Сообщать = 1 Тогда
		Сообщить(ТекстСообщения);
	КонецЕсли;
	
	Если Предупреждать = 1 Тогда
		Предупреждение(ТекстСообщения);
	КонецЕсли;
	
КонецПроцедуры // Соо

